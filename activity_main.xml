<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:text="calculator"
        android:textSize="30sp"
        android:textColor="@color/white"></TextView>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="200dp"
         android:text="35+24"
         android:textSize="60dp"
         android:textColor="@color/white"> </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="%"
            android:textSize="30dp"
            android:background="@drawable/button_background_white"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/button_background_gray"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/button_background_gray"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/button_background_gray"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="c"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@drawable/button_background_gray"></Button>


    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="("
                android:textSize="30dp"
                android:background="@drawable/button_background_white"></Button>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background_gray"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background_gray"></Button>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background_gray"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background_gray"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text=")"
                android:textSize="30dp"
                android:background="@drawable/button_background_white"></Button>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background_gray"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background_gray"></Button>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background_gray"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background_gray"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="+/-"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background_orange"></Button>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background_orange"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background_orange"></Button>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:text="="
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background_orange"></Button>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>